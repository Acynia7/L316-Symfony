{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1>Derniers articles</h1>

{% if posts is not empty %}
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('app_post_show', {'slug': post.slug}) }}">
                    {{ post.title }}
                </a>
                <p>{{ post.content|striptags|slice(0, 150) ~ '...' }}</p>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p>Aucun article publie pour le moment.</p>
{% endif %}
{% endblock %}
