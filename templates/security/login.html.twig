{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div style="max-width: 480px; margin: 2em auto; font-family: sans-serif;">
    <h1>Connexion</h1>

    {% if error %}
        <div style="color: #721c24; background: #f8d7da; border: 1px solid #f5c6cb; padding: 0.75em; border-radius: 4px; margin-bottom: 1em;">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post">
        <div style="margin-bottom: 1em;">
            <label for="username" style="display: block; margin-bottom: 0.3em; font-weight: bold;">Email</label>
            <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus
                   style="width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box;">
        </div>

        <div style="margin-bottom: 1em;">
            <label for="password" style="display: block; margin-bottom: 0.3em; font-weight: bold;">Mot de passe</label>
            <input type="password" id="password" name="_password" required
                   style="width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box;">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class='c-button'">
            Se connecter
        </button>
    </form>

    <p style="margin-top: 1em; text-align: center;">
        Pas encore de compte ? <a class='c-link' href="{{ path('app_register') }}">S'inscrire</a>
    </p>
</div>
{% endblock %}
