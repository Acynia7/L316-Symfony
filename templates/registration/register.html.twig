{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div style="max-width: 480px; margin: 2em auto; font-family: sans-serif;">
    <h1>Inscription</h1>

    {% for flash_message in app.flashes('success') %}
        <div style="color: #155724; background: #d4edda; border: 1px solid #c3e6cb; padding: 0.75em; border-radius: 4px; margin-bottom: 1em;">
            {{ flash_message }}
        </div>
    {% endfor %}

    {{ form_start(registrationForm) }}
        <div style="margin-bottom: 1em;">
            {{ form_label(registrationForm.pseudo, null, {'label_attr': {'style': 'display: block; margin-bottom: 0.3em; font-weight: bold;'}}) }}
            {{ form_widget(registrationForm.pseudo, {'attr': {'style': 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box;'}}) }}
            {{ form_errors(registrationForm.pseudo) }}
        </div>

        <div style="margin-bottom: 1em;">
            {{ form_label(registrationForm.email, null, {'label_attr': {'style': 'display: block; margin-bottom: 0.3em; font-weight: bold;'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'style': 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box;'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div style="margin-bottom: 1em;">
            {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'style': 'display: block; margin-bottom: 0.3em; font-weight: bold;'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'style': 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box;'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <button type="submit" class='c-button'>
            S'inscrire
        </button>
    {{ form_end(registrationForm) }}

    <p style="margin-top: 1em; text-align: center;">
        Deja un compte ? <a class='c-link' href="{{ path('app_login') }}">Se connecter</a>
    </p>
</div>
{% endblock %}
